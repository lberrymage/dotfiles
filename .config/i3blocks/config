# Options common to all blocks
align=center
separator=false
separator_block_width=20
markup=pango

[arch_update]
command=printf "\\uf303 " && ./scripts/arch_update -b "#d6d6d6" -u "#d6d6d6" -a
interval=900
color=#1793d1

[battery]
command=./scripts/battery
interval=5
color=#d2b400

[wifi]
command=printf "\\uf1eb " && ./scripts/wifi
interval=5
color=#20b440

[time]
command=printf "\\uf017 " && date '+%I:%M'
interval=5
color=#ca3626
